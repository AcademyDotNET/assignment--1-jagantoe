@model NewProductModel;

@{
	ViewData["Title"] = "New Product";
}

<h1>New Product</h1>
<form method="post" enctype="multipart/form-data" asp-controller="Products" asp-action="New">

	<div class="form-group col-12">
		<div class="form-row">
			<label class="col-sm-4">Name</label>
			<input asp-for="@Model.Name" type="text" id="name" class="col-sm-8" />
		</div>
		<div class="form-row">
			<div class="col-sm-4"></div>
			<span asp-validation-for="@Model.Name" class="text-danger mt-2"></span>
		</div>
	</div>

	<div class="form-group col-12">
		<div class="form-row">
			<label class="col-sm-4">Price</label>
			<input asp-for="@Model.Price" type="number" id="price" class="col-sm-8" />
		</div>
		<div class="form-row">
			<div class="col-sm-4"></div>
			<span asp-validation-for="@Model.Price" class="text-danger mt-2"></span>
		</div>
	</div>

	<div class="form-group col-12">
		<div class="form-row">
			<label class="col-sm-4">Registration</label>
			<input asp-for="@Model.Registration" type="text" id="registration" class="col-sm-8" />
		</div>
		<div class="form-row">
			<div class="col-sm-4"></div>
			<span asp-validation-for="@Model.Registration" class="text-danger mt-2"></span>
		</div>
	</div>

	<div class="text-center">
		<input type="submit" value="Add" />
	</div>
</form>