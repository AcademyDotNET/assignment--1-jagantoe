@model RegisterModel;

@{
	ViewData["Title"] = "Register";
}

<h1>Register</h1>
<form method="post" enctype="multipart/form-data" asp-controller="User" asp-action="Register">
	
	@if (ViewBag.Message != null)
	{
		<div class="alert alert-danger" role="alert">
			@ViewBag.Message
		</div>
	}

	<div class="form-group col-12">
		<div class="form-row">
			<label class="col-sm-4">First Name</label>
			<input asp-for="@Model.FirstName" type="text" id="firstname" class="col-sm-8" />
		</div>
		<div class="form-row">
			<div class="col-sm-4"></div>
			<span asp-validation-for="@Model.FirstName" class="text-danger mt-2"></span>
		</div>
	</div>

	<div class="form-group col-12">
		<div class="form-row">
			<label class="col-sm-4">Last Name</label>
			<input asp-for="@Model.LastName" type="text" id="lastname" class="col-sm-8" />
		</div>
		<div class="form-row">
			<div class="col-sm-4"></div>
			<span asp-validation-for="@Model.LastName" class="text-danger mt-2"></span>
		</div>
	</div>

	<div class="form-group col-12">
		<div class="form-row">
			<label class="col-sm-4">Email</label>
			<input asp-for="@Model.Email" type="email" id="email" class="col-sm-8" />
		</div>
		<div class="form-row">
			<div class="col-sm-4"></div>
			<span asp-validation-for="@Model.Email" class="text-danger mt-2"></span>
		</div>
	</div>

	<div class="form-group col-12">
		<div class="form-row">
			<label class="col-sm-4">Password</label>
			<input asp-for="@Model.Password" type="password" id="password" class="col-sm-8" />
		</div>
		<div class="form-row">
			<div class="col-sm-4"></div>
			<span asp-validation-for="@Model.Password" class="text-danger mt-2"></span>
		</div>
	</div>

	<div class="text-center">
		<input type="submit" value="Register" />
	</div>

</form>